<div class="container">
  <div class="my-3">
    <div class="row justify-content-center">
      <div class="col-12 col-md-12 col-lg-10 lh-lg">
        <h1 class="d-flex justify-content-between">Contacto<%= link_to "Ver todos los contactos", contacts_path, class:"btn btn-light border-dark my-auto" %></h1>
        <div class="card shadow p-3 mb-5">
          <div class="card-body">
            <h5 class="card-title"><%= @contact.full_name %></h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Tel√©fono: <%= @contact.phone %></li>
            <li class="list-group-item">Email: <%= @contact.email %></li>
            <li class="list-group-item">Tipo de contacto: <%= @contact.kind %></li>
            <li class="list-group-item">Notas: <%= @contact.notes %></li>
          </ul>
          <div class="card-footer">
            <div class="mt-5 d-flex justify-content-between">
              <%= link_to "Editar contacto", edit_contact_path(@contact), class: "btn btn-outline-warning" %>
              <%= link_to "Eliminar contacto", contact_path(@contact), class: "btn btn-outline-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"}%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

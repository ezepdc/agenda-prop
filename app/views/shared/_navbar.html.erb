<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "agenda-prop.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="nav nav-tabs mx-3">
        <% if user_signed_in? %>
          <li class="nav-item">
          <% if is_active('dashboard') %>
            <%= link_to "Dashboard", "/dashboard", class: "nav-link active" %></li>
          <% else %>
            <%= link_to "Dashboard", "/dashboard", class: "nav-link nav-link-gray" %></li>
          <% end %>
          <% if is_active('properties') %>
            <%= link_to "Propiedades", "/properties", class: "nav-link active" %></li>
          <% else %>
            <%= link_to "Propiedades", "/properties", class: "nav-link nav-link-gray" %></li>
          <% end %>
          <% if is_active('incidents') %>
            <%= link_to "Incidencias", "/incidents", class: "nav-link active" %></li>
          <% else %>
            <%= link_to "Incidencias", "/incidents", class: "nav-link nav-link-gray" %></li>
          <% end %>
          <% if is_active('contacts') %>
            <%= link_to "Contactos", "/contacts", class: "nav-link active" %></li>
          <% else %>
            <%= link_to "Contactos", "/contacts", class: "nav-link nav-link-gray" %></li>
          <% end %>
          <% if is_active('bills') %>
            <%= link_to "Transacciones", "/bills", class: "nav-link active" %></li>
          <% else %>
            <%= link_to "Transacciones", "/bills", class: "nav-link nav-link-gray" %></li>
          <% end %>
          <% if is_active('settlements') %>
            <%= link_to "Liquidaciones", "/settlements", class: "nav-link active" %></li>
          <% else %>
            <%= link_to "Liquidaciones", "/settlements", class: "nav-link nav-link-gray" %></li>
          <% end %>
          </li>
          </ul>
          <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Editar usuario", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Iniciar sesión", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

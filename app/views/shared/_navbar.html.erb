<div class="navbar navbar-expand-sm navbar-light shadow navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "agenda-prop.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
        <ul class="nav nav-tabs mx-3">
          <li class="nav-item">
            <%= link_to "Dashboard", "/dashboard", class: "nav-link #{is_active('dashboard')}" %></li>
            <%= link_to "Propiedades", "/properties", class: "nav-link #{is_active('properties')}" %></li>
            <%= link_to "Incidencias", "/incidents?query=pending", class: "nav-link #{is_active('incidents')}" %></li>
            <%= link_to "Contactos", "/contacts", class: "nav-link #{is_active('contacts')}" %></li>
            <%= link_to "Transacciones", "/bills", class: "nav-link #{is_active('bills')}" %></li>
            <%= link_to "Liquidaciones", "/settlements", class: "nav-link #{is_active('settlements')}" %></li>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Editar usuario", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% else %>
        <ul class="nav nav-tabs mx-3">
          <li class="nav-item">
            <%= link_to "Iniciar sesión", new_user_session_path, class: "nav-link nav-link-gray" %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-4">
    <%= simple_form_for(@incident) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.association :property, label_method: :property_reference, prompt: true, required: true %>
      <p><%= link_to "Crear propiedad", new_property_path, target: :_blank %></p>
      <%= f.association :contact, label_method: :full_name, prompt: true , required: true %>
      <p><%= link_to "Crear contacto", new_contact_path, target: :_blank %></p>
      <%= f.input :kind, required: true %>
      <%= f.input :description, required: true %>
      <%= f.input :documents, as: :file, input_html: { multiple: true } %>
      <%= f.button :submit, class: "btn btn-flat" %>
    <% end %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-12 col-md-6 col-lg-4">
    <%= simple_form_for(@bill) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.association :property, label_method: :property_reference, prompt: true, required: true %>
      <%= f.input :bill_date, required: true %>
      <%= f.input :kind, required: true, collection: ['Cobro', 'Pago'], prompt: true %>
      <%= f.association :contact, label_method: :full_name, prompt: true , required: true %>
      <%= f.input :amount, required: true %>
      <%= f.input :amount_currency %>
      <%= f.input :concept, required: true %>
      <%= f.input :payment_method, required: true %>
      <%= f.input :notes %>
      <%= f.button :submit, class: "btn btn-flat" %>
    <% end %>
  </div>
</div>

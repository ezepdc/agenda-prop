<div class="container">
  <div class="my-3">
    <h1 class="d-flex justify-content-between">Todas las transacciones <%= link_to "Crear transacción", new_bill_path, class:"btn btn-secondary my-auto" %></h1>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @bills.each do |bill| %>
        <div class="col">
          <div class="card border-secondary">
            <div class="card-body">
              <h5 class="card-title d-flex justify-content-between">
                <%= bill.bill_date %> <%= bill.property.property_reference %>
                <%= link_to "Ver transacción", bill_path(bill), class:"btn btn-primary" %>
              </h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Fecha: <%= bill.bill_date %></li>
              <li class="list-group-item">Propiedad ref.: <%= bill.property.property_reference %></li>
              <li class="list-group-item">Tipo: <%= bill.kind %></li>
              <li class="list-group-item">Contacto: <%= bill.contact.full_name %></li>
              <li class="list-group-item">Concepto: <%= bill.concept %></li>
              <li class="list-group-item">Monto: <%= bill.amount %></li>
              <li class="list-group-item">Creado por: <%= bill.user.first_name %></li>
              <li class="list-group-item">Creado por: <%= bill.user.first_name %></li>
              <li class="list-group-item">
                 Liquidación:
                <% if bill.settlement %>
                  Ok
                <% else %>
                  Pendiente
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
